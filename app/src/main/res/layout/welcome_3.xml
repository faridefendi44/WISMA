<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Welcome3">


    <ImageView
        android:id="@+id/wallpaper1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageView
        android:id="@+id/iconbar1"
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:src="@drawable/barstatus"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:src="@drawable/img"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="575dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:src="@drawable/img_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="575dp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:src="@drawable/img_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="575dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="34dp"
        android:text="Get Started"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="321dp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="355dp"
        android:layout_height="101dp"
        android:text="We invite you to share your experiences by writing reviews and providing ratings for the visited locations. This will assist other users in choosing the right destinations based on their preferences. We hope you enjoy your experience using the WARTA and discover the true charm of Purwokerto through your journey. Happy exploring!"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/img_2"
        android:text="Register"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="652dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:foreground="@drawable/img_3"
        android:text="Login"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="652dp" />


</androidx.constraintlayout.widget.ConstraintLayout>